{
  "name": "@xorng/automation",
  "version": "0.1.0",
  "description": "XORNG Framework automation and orchestration",
  "type": "module",
  "bin": {
    "xorng": "./dist/index.js",
    "xorng-server": "./dist/server/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:server": "node dist/server/server.js",
    "dev": "tsx watch src/index.ts",
    "dev:server": "tsx watch src/server/server.ts",
    "docker:build": "bash scripts/docker-build.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint src/",
    "test": "vitest"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "yaml": "^2.3.4",
    "pino": "^8.17.2",
    "zod": "^3.22.4",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
